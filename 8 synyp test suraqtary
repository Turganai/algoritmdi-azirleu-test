score = 0
i = 0

print("üß† –ê–ª–≥–æ—Ä–∏—Ç–º–¥—ñ ”ô–∑—ñ—Ä–ª–µ—É - —Ç–µ—Å—Ç –æ–π—ã–Ω—ã–Ω–∞ “õ–æ—à –∫–µ–ª–¥—ñ“£!")
print("–°“±—Ä–∞“õ—Ç–∞—Ä“ì–∞ –¥“±—Ä—ã—Å –∂–∞—É–∞–ø –±–µ—Ä—ñ–ø –∫”©—Ä!\n")

while i < len(questions):
    q = questions[i]
    print(f"{i+1}-—Å“±—Ä–∞“õ: {q['question']}")

    # –ñ–∞—É–∞–ø –Ω“±—Å“õ–∞–ª–∞—Ä—ã–Ω —à—ã“ì–∞—Ä—É
    for index, option in enumerate(q["options"], start=1):
        print(f"{index}. {option}")

    try:
        choice = int(input("–ñ–∞—É–∞–ø –Ω”©–º—ñ—Ä—ñ–Ω –µ–Ω–≥—ñ–∑ (1-4): "))
        if 1 <= choice <= 4:
            selected = q["options"][choice - 1]
            if selected.lower().strip() == q["answer"].lower():
                print("‚úÖ –î“±—Ä—ã—Å!\n")
                score += 1
                i += 1
            else:
                print("‚ùå “ö–∞—Ç–µ –∂–∞—É–∞–ø. “ö–∞–π—Ç–∞ –∫”©—Ä!\n")
        else:
            print("‚ö†Ô∏è 1 –º–µ–Ω 4 –∞—Ä–∞–ª—ã“ì—ã–Ω–¥–∞ “ì–∞–Ω–∞ —Ç–∞“£–¥–∞.\n")
    except ValueError:
        print("‚ö†Ô∏è –¢–µ–∫ —Å–∞–Ω –µ–Ω–≥—ñ–∑—É –∫–µ—Ä–µ–∫ (1-4).\n")

print("üéâ –¢–µ—Å—Ç –∞—è“õ—Ç–∞–ª–¥—ã!")
print(f"“∞–ø–∞–π: {score} / {len(questions)}")

if score == 10:
    print("üåü –¢–∞–º–∞—à–∞ –Ω”ô—Ç–∏–∂–µ! –ê–ª–≥–æ—Ä–∏—Ç–º —Å–∞“ì–∞–Ω –æ“£–∞–π –µ–∫–µ–Ω!")
